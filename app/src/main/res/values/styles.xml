<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TopRoundedCard" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
  
    <!-- Login specific text styles -->
    <style name="LoginTextHeader">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/login_text_primary</item>
    </style>
    
    <style name="LoginTextSubheader">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/login_text_secondary</item>
    </style>
    
    <style name="LoginInputText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/login_text_primary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/login_input_background</item>
    </style>
    
    <style name="LoginButtonText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="LoginLinkText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/login_link_color</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>